        android:supportsRtl="true"
        android:theme="@style/Theme.Aplicacion_Tienda"
        tools:targetApi="31">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyD8lFVK-WU5elni1IDNwsSbMqbMbHgQJAI" />

        <activity
